{
	"name": "monorepo",
	"scripts": {
		"docs.dev": "npm --prefix ./docs run dev",
		"docs.install": "npm --prefix ./docs install",
		"docs.build": "npm --prefix ./docs run build",
		"docs.preview": "npm --prefix ./docs run preview",
		"components.dev": "npm --prefix ./packages/components run build:watch",
		"components.install": "npm --prefix ./packages/components install",
		"components.build": "npm --prefix ./packages/components run build",
		"codex.install": "npm --prefix ./internal/codex install",
		"codex.dev": "npm --prefix ./internal/codex run dev",
		"install": "concurrently 'npm:components.install' 'npm:codex.install' 'npm:docs.install'",
		"dev": "concurrently 'npm:components.dev' 'npm:codex.dev' 'npm:docs.dev'",
		"changesets:release": "changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.6",
		"concurrently": "^9.2.0"
	},
	"workspaces": ["packages/*"]
}
