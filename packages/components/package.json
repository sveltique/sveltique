{
    "name": "@sveltique/components",
    "description": "Build beautiful and consistent user interfaces with ready-to-use components, a cohesive design system and Tailwind's flexibility.",
    "version": "0.12.0",
    "keywords": [
        "svelte",
        "components",
        "ui",
        "sveltekit",
        "tailwindcss"
    ],
    "license": "MIT",
    "author": {
        "name": "Sajidur Rahman"
    },
    "homepage": "https://sveltique.dev",
    "bugs": "https://github.com/sveltique/sveltique/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/sveltique/sveltique.git",
        "directory": "packages/components"
    },
    "type": "module",
    "scripts": {
        "build": "npm run prepack",
        "build:watch": "npm run prepack:watch",
        "prepare": "svelte-kit sync || echo ''",
        "prepack": "svelte-kit sync && svelte-package && publint",
        "prepack:watch": "svelte-kit sync && svelte-package --watch && publint",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "format": "npx @biomejs/biome format --write",
        "lint": "npx @biomejs/biome lint --write",
        "generate.docs": "npx typedoc --tsconfig ./tsconfig.docs.json",
        "generate.docs:watch": "npx typedoc --watch --tsconfig ./tsconfig.docs.json"
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "svelte": "./dist/components/index.js",
    "types": "./dist/components/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/components/index.d.ts",
            "svelte": "./dist/components/index.js"
        },
        "./utils": {
            "types": "./dist/utils/index.d.ts",
            "svelte": "./dist/utils/index.js"
        },
        "./types": {
            "types": "./dist/types.d.ts"
        },
        "./*": {
            "types": "./dist/components/*/index.d.ts",
            "svelte": "./dist/components/*/index.js"
        }
    },
    "devDependencies": {
        "@biomejs/biome": "2.2.2",
        "@sveltejs/adapter-static": "^3.0.9",
        "@sveltejs/kit": "^2.22.0",
        "@sveltejs/package": "^2.0.0",
        "@sveltejs/vite-plugin-svelte": "^6.0.0",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.15",
        "@tailwindcss/vite": "^4.0.0",
        "publint": "^0.3.2",
        "svelte": "^5.38.0",
        "svelte-check": "^4.0.0",
        "tailwindcss": "^4.0.0",
        "typedoc": "^0.28.13",
        "typescript": "^5.0.0",
        "vite": "^7.1.12"
    },
    "dependencies": {
        "esm-env": "^1.2.2",
        "tailwind-merge": "^3.3.1",
        "tailwind-variants": "2.0.1"
    },
    "peerDependencies": {
        "@floating-ui/dom": "^1.7.4",
        "svelte": "^5.25.0"
    },
    "optionalDependencies": {
        "shiki": "^3.9.2"
    }
}